---
const { id, title } = Astro.props;
---

<section id={id}>
    <h2>{title}</h2>
    <slot />
</section>

<style>
    section {
        margin-top: 4rem;
        padding: 0 20px;
    }

    h2 {
        font-size: 1.8rem;
        margin-bottom: 16px;
        border-bottom: 2px solid #ccc;
    }

    ul {
        list-style-type: disc;
        padding-left: 20px;
    }

    li {
        margin-bottom: 8px;
        font-size: 1rem;
        color: #333;
    }
</style>

<style is:inline>
    p {
        font-size: 1.2rem;
        line-height: 1.6;
        color: #333;
    }
</style>
