---
import ProjectPageLink from "./ProjectPageLink.astro";
import ProjectGithubLink from "./ProjectGithubLink.astro";

const { title, description, image, working_on, project_url, github_url } =
    Astro.props;
---

<article>
    <div class="project-card">
        {
            working_on ? (
                <div
                    class="project-image"
                    style="width:100%; min-height: 200px; display:flex; align-items:center; justify-content:center; border-radius:8px; font-style:italic;"
                >
                    En desarrollo...
                </div>
            ) : (
                <img
                    class="project-image"
                    src={image}
                    alt={title}
                    style="width:100%; height:auto; border-radius:8px;"
                />
            )
        }
        <div class="project-details">
            <h3>{title}</h3>
            <div>
                <slot name="tech-stack" />
            </div>
            <p>{description}</p>
            <div class="links">
                <ProjectPageLink href={project_url} />
                <ProjectGithubLink href={github_url} />
            </div>
        </div>
    </div>
</article>

<style>
    .project-image {
        object-fit: cover;
        height: 100%;
        background-color: #f3f3f3;
        color: #616161;
    }

    h3 {
        margin: 0;
        font-size: 1.5rem;
        color: #222;
    }
    .project-card {
        display: grid;
        place-items: end center;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
    }

    @media (max-width: 700px) {
        .project-card {
            grid-template-columns: 1fr;
        }
    }

    .links {
        display: flex;
        gap: 12px;
        flex-direction: row;
        margin-top: 12px;
    }

    .link-button {
        background-color: #f0f0f0;
        color: #333;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        text-align: center;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 6px;
        border: 1px solid #e0e0e0;
    }

    .project-details {
        margin: 0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .link-button:hover {
        background-color: #e0e0e0;
        transform: translateY(-1px);
    }

    @media (max-width: 600px) {
        .links {
            flex-direction: row;
            gap: 8px;
        }

        .link-button {
            padding: 6px 12px;
            font-size: 14px;
        }
    }
</style>
