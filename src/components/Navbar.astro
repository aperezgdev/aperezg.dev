---
import LeftArrowIcon from "./icons/LeftArrowIcon.astro";
---

<ul id="navbar">
    <slot />
</ul>

<style>
    #navbar {
        display: flex;
        gap: 9px;
        justify-content: space-between;
        padding: 16px 24px;
        width: 75%;
        max-width: 1200px;
        margin: 0 auto;
        min-width: 75%;
        font-weight: 600;
        background: rgba(245, 245, 245, 0.9);
        font-size: 14px;
        align-items: center;
        position: sticky;
        top: 10px;
        border-radius: 8px;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
    }

    ul {
        list-style: none;
        display: flex;
        gap: 12px;
        padding: 0;
        margin: 0;
    }

    @media (max-width: 700px) {
        #navbar {
            display: flex;
            padding: 12px 16px;
            width: fit-content;
        }
    }
</style>
