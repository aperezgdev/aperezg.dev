---
const { href, style } = Astro.props;
const isDisabled = !href || href === "#";
---

{
    isDisabled ? (
        <span style={style} class="link-button disabled">
            <slot />
        </span>
    ) : (
        <a
            href={href}
            style={style}
            target="_blank"
            rel="noopener noreferrer"
            class="link-button"
        >
            <slot />
        </a>
    )
}

<style>
    a,
    .disabled {
        background-color: #f0f0f0;
        color: #333;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        text-align: center;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 6px;
        border: 1px solid #e0e0e0;
    }

    .link-button:hover {
        background-color: #e0e0e0;
        transform: translateY(-1px);
    }

    @media (max-width: 600px) {
        a,
        .disabled {
            width: 100%;
            font-size: 1.2rem;
            display: flex;
            justify-content: center;
        }
    }
</style>
