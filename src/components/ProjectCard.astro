---
const { title, description, image, working_on } = Astro.props;
---

<article>
    <h3>{title}</h3>
    <div class="project-card">
        {
            working_on ? (
                <div style="width:100%; height:200px; display:flex; align-items:center; justify-content:center; background-color:#f0f0f0; border-radius:8px; color:#888; font-style:italic;">
                    En desarrollo...
                </div>
            ) : (
                <img
                    src={image}
                    alt={title}
                    style="width:100%; height:auto; border-radius:8px;"
                />
            )
        }
        <p>{description}</p>
    </div>
</article>

<style>
    .project-card {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
    }
</style>
