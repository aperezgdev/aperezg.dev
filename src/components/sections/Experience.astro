---
import Section from "./Section.astro";

const t = Astro.locals.t.home.experience;
---

<Section title={t.title} id="experience">
    <ul>
        <li>
            <strong>{t.first.title}</strong>
            <p>
                {t.first.param}
            </p>
        </li>
        <li>
            <strong>{t.second.title}</strong>
            <p>
                {t.second.param}
            </p>
        </li>
    </ul>
</Section>

<style>
    ul {
        list-style: none;
        padding: 0;
    }

    li {
        margin-bottom: 24px;
    }

    p {
        margin: 8px 0 0 0;
    }

    strong {
        font-size: 1.3rem;
    }

    ul {
        display: flex;
        flex-direction: column;
    }
</style>
