---
import NavbarPorfolio from "../components/NavbarPorfolio.astro";
import Analytics from "@vercel/analytics/astro";
import "@fontsource/roboto";
const { title, lang, translation } = Astro.props;
---

<html lang={lang}>
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <style>
            body {
                margin: 0;
                font-family: "Roboto", sans-serif;
                background: #f5f5f5;
                color: #333;
                width: 100%;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }

            * {
                box-sizing: border-box;
                margin: 0;
                padding: 0;
            }

            main {
                max-width: 900px;
            }
        </style>
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta name="author" content="Alex Perez Garcia" />
        <meta
            name="description"
            content="Alex Perez Garcia's personal website and portfolio."
        />
        <meta
            name="keywords"
            content="Alex Perez Garcia, aperezg.dev, portfolio, developer, software engineer, projects, blog, backend developer, fullstack developer"
        />
        <title>{title ?? "aperezg.dev"}</title>
    </head>
    <body>
        <slot name="navbar">
            <NavbarPorfolio />
        </slot>
        <main>
            <slot />
        </main>
    </body>
    <Analytics />
</html>

<style>
    main {
        width: 100%;
        min-height: 80vh;
    }

    span {
        color: gray;
        animation: colorChange 3s infinite;
    }

    h1 {
        font-size: 2.5rem;
    }

    h3 {
        font-size: 1.5rem;
        margin-top: -0.5rem;
        color: #555;
    }

    @keyframes colorChange {
        0% {
            color: gray;
        }
        50% {
            color: black;
        }
        100% {
            color: gray;
        }
    }
</style>
