---
import GithubIcon from "../icons/GithubIcon.astro";
import Section from "./Section.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";

const t = Astro.locals.t.home.about;
---

<Section id="about-me" title={t.title}>
    <p>
        {t.first.param}
    </p>
    <p>
        {t.second.param}
    </p>
    <p class="socials">
        <a
            href="https://www.github.com/aperezgdev"
            target="blank"
            aria-label="GitHub"
        >
            <GithubIcon width="32px" />
        </a>
        <a
            href="https://www.linkedin.com/in/aperezgdev"
            target="blank"
            aria-label="LinkedIn"
        >
            <LinkedInIcon width="32px" />
        </a>
    </p>
</Section>

<style>
    .socials {
        display: flex;
        gap: 16px;
        margin-top: 16px;
    }
</style>
